<h1>Portfolio Items</h1>


<%= link_to 'create new portfolio item', new_portfolio_url %>

<% @portfolio_items.each do |portfolio_item| %>
	<h2><%= link_to "#{portfolio_item.title}", portfolio_show_path(portfolio_item) %></h2>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<p><%= image_tag(portfolio_item.thumb_image) unless portfolio_item.thumb_image.nil?  %></p>
	<p><%= link_to 'edit_portfolio item', edit_portfolio_path(portfolio_item) %></p>
	<p><%= link_to 'destroy', portfolio_item, method: :delete, data: {confirm: 'Are you sure?'} %></p>
	<hr>
<% end %>