
<div class="col-sm-8 blog-main">
  <%= form_with(model: portfolio, local: true) do |form| %>
    <% if portfolio.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(portfolio.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
        <% portfolio.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

         <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_area :subtitle, class: 'form-control' %>
        </div>

        <div class="form-group">
          <label class="btn btn-primary">
            Upload a main image file <%= form.file_field :main_image, style: 'display:none;' %>
          </label>
        </div>

        <div class="form-group">
          <label class="btn btn-primary">
            Upload a thumb image file <%= form.file_field :thumb_image, style: 'display:none;' %>
          </label>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, class: 'form-control', rows: 13 %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <div>
        <h2>Technologies Used:</h2>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="form-group">
            <li>
              <%= technology_form.label :name %>
              <%= technology_form.text_field :name, class: 'form-control' %>
            </li>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
   
  <% end %>
</div>