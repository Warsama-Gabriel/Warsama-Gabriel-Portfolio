
<div class="col-sm-8 blog-main">
  <%= form_with(model: portfolio, local: true) do |f| %>
    <% if portfolio.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(portfolio.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
        <% portfolio.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

         <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_area :subtitle, class: 'form-control' %>
        </div>

        <div class="form-group">
          <label class="btn btn-primary">
            Upload a main image file <%= f.file_field :main_image, style: 'display:none;' %>
          </label>
        </div>

        <div class="form-group">
          <label class="btn btn-primary">
            Upload a thumb image file <%= f.file_field :thumb_image, style: 'display:none;' %>
          </label>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 13 %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <div id="technologies">
        <h2>Technologies Used:</h2>
        <%= f.fields_for :technologies do |technology| %>
          <div class="form-group">
            <%= render 'technology_fields', f: technology %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
          <%= link_to_add_association 'Add Technology', f, :technologies %>
        </div>
      </div>
    </div>
   
  <% end %>
</div>