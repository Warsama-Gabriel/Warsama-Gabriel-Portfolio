<h1><%= @portfolio.title %></h1>

<%= image_tag(@portfolio.main_image) %>

<p><em><%= @portfolio.subtitle %></em></p>

<p><%= @portfolio.body %></p>

<h2>Technologies used</h2>

<% @portfolio.technologies.each do |t| %>
	<p><%= t.name %></p>
<% end %>

<%= link_to 'Edit', edit_portfolio_path(@portfolio) + ' | ' if logged_in?(:sideadmin) %>
<%= link_to 'Back', portfolios_path %>
