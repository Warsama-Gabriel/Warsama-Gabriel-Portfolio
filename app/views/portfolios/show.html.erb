<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag(@portfolio.main_image) %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>

      <hr>

      <em><%= @portfolio.subtitle %></em>

      <p><%= @portfolio.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio.technologies.each do |t| %>
		<p><%= t.name %></p>
	  <% end %>
	  <% if logged_in?(:siteadmin) %>
	  	<p><%= link_to 'Edit', edit_portfolio_path(@portfolio) %></p>
	  <% end %>

    </div>
  </div>
</div>



